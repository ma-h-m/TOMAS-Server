// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["postgresqlExtensions"]
}

datasource db {
  provider   = "postgresql"
  url        = env("DATABASE_URL")
  extensions = [vector]
}

model Chat {
  id        String   @id @default(uuid())
  createdAt DateTime @default(now())
  role      Role
  content   String
}

enum Role {
  AI
  HUMAN
}

model Screen {
  id           String      @id @default(uuid())
  url          String
  rawHtml      String
  simpleHtml   String
  components   Component[]
  prevAction   Action?     @relation(fields: [prevActionId], references: [id])
  prevActionId String?     @unique
  createdAt    DateTime    @default(now())
}

model Component {
  id          String                 @id @default(uuid())
  type        ComponentType
  description String
  i           String
  html        String
  createdAt   DateTime               @default(now())
  vector      Unsupported("vector")?
  acreen      Screen?                @relation(fields: [screenId], references: [id])
  screenId    String?
  onAction    Action?                @relation(fields: [onActionId], references: [id])
  onActionId  String?                @unique
}

model Action {
  id          String      @id @default(uuid())
  type        Interaction
  value       String?
  nextScreen  Screen?
  onComponent Component?
  createdAt   DateTime    @default(now())
}

enum Interaction {
  GOTO
  SCROLL
  CLICK
  INPUT
  HOVER
  BACK
}

enum ComponentType {
  button
  link
  input_radio
  input_text
  input_button
  list
}
